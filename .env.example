# Environment Configuration Template
# SECURITY: Never commit actual credentials. Generate secure passwords for each environment.
# Copy this file to .env and replace placeholders with your actual values.

# Database Configuration
# SECURITY: Use strong, unique passwords for each environment
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_secure_database_password
POSTGRES_DB=your_database_name
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://your_database_user:your_secure_database_password@db:5432/your_database_name

# Backend Configuration
# SECURITY: Generate secure keys for each environment
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_generate_with_openssl_rand_hex_32
SESSION_SECRET_KEY=your_session_secret_generate_with_openssl_rand_hex_32
API_V1_STR=/api/v1
PROJECT_NAME=Report Card Assistant
VERSION=1.0.0
DEBUG=True
SESSION_EXPIRE_MINUTES=30

# Seed Data Configuration (Development Only)
SEED_DEFAULT_PASSWORD=your_seed_password

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_NAME=Report Card Assistant

# CORS Settings (Development)
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# Port Configuration
DB_PORT=5432
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Environment
ENVIRONMENT=development
NODE_ENV=development